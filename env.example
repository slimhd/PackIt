# OpenWeatherMap API Key
# Get your free API key from: https://openweathermap.org/api
# For 30-day weather forecasts, you need a Pro subscription
# Pro API provides extended forecasts up to 30 days for accurate packing suggestions
WEATHER_API_KEY=your_openweathermap_api_key_here

# OpenAI API Key (Optional)
# Required for AI-powered packing suggestions
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Application Environment
NODE_ENV=development

NEXT_PUBLIC_ADSENSE_CLIENT_ID=your-adsense-client-id
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_MODEL=tngtech/deepseek-r1t2-chimera:free
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Upstash Redis for Rate Limiting
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token 